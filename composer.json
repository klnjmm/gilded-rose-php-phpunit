{
    "name": "emilybache/gilded-rose-refactoring-kata",
    "description": "A kata to practice refactoring, tests and polymorphism",
    "require": {
        "php": "^7.3 || ^8.0"
    },
    "autoload": {
        "psr-4": {
            "GildedRose\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.4",
        "infection/infection": "^0.23.0"
    }
}
